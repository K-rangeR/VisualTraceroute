set number
set numberwidth=2

"Highlights code syntax
syntax on

"Highlight the matching ({[
set showmatch

inoremap jk <esc>
inoremap kj <esc>

"Get backspace to work
set backspace=indent,eol,start

"Highlight the current line
set cursorline

"Keeps things indented
set autoindent

"No line wrap
set nowrap

"Tabs that are 2 spaces wide
set tabstop=2 shiftwidth=2 softtabstop=2 expandtab

"Use tabs of length 8 for *.c, and *.go files
autocmd Filetype c setlocal ts=8 sw=8 softtabstop=8 noexpandtab
autocmd Filetype go setlocal ts=8 sw=8 softtabstop=8 noexpandtab

"Always use tabs for make files (makefile)
autocmd Filetype make setlocal ts=8 sw=8 softtabstop=8 noexpandtab

"========================================================
"For peachpuff color scheme
"colorscheme peachpuff
"Comment color
"highlight Comment ctermfg=blue

"All line numbers
"highlight LineNr ctermfg=3

"Line number for current line
"highlight CursorLineNr ctermfg=3

"Highlight text
"highlight Visual cterm=bold ctermbg=grey ctermfg=NONE

"Highlight the 80th column in dark grey
"set colorcolumn=80
"highlight ColorColumn ctermbg=235 guibg=#2c2d27
"========================================================

"Change the color of the vertical split
highlight VertSplit ctermfg=235 ctermbg=white

"Close brackets
"inoremap {<CR> {<CR>}<Esc>ko<tab>

"Search down in a directory
set path+=**

"Display all matching files when tab completing
set wildmenu

"Don't create swap files
set noswapfile

set incsearch

"Plugins
call plug#begin("~/.vim/plugged")

Plug 'ayu-theme/ayu-vim'

Plug 'itchyny/lightline.vim'
set laststatus=2

call plug#end()

set termguicolors     " enable true colors support
let ayucolor="dark"   " for dark version of theme
colorscheme ayu
